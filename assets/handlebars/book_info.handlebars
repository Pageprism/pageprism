{{#each book.attributes.attribute as |attribute name|}}
<h2>{{name}}:</h2>
{{#each this}}
<a href="/search/{{name}}/{{this.value}}">{{this.value}}</a>{{#unless @last}},{{/unless}}
{{/each}}
{{/each}}
<h2>Collections:</h2>
{{#each collections}}
<a href="/shelf/{{this.id}}">{{this.name}}</a>{{#unless @last}},{{/unless}}
{{/each}}

{{#if editable}}
<div class="editBook oo-ui-iconElement">
  <a class="popUnder" href="/admin/document/modify/{{book.id}}">
    <span class="oo-ui-iconElement-icon oo-ui-icon-edit"></span> Edit
  </a>
</div>
{{/if}}
